{
    "root": true,
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "es6": true,
      "jasmine": true
    },
    "rules": {
      "max-len": [1, 80, 2],
      "indent": [1, 2],
      "one-var": 0,
      "one-var-declaration-per-line": 0,
      "new-cap": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "comma-dangle": 0,
      "curly": [1, "multi-line"],
      "arrow-body-style": 0,
      "linebreak-style": 0,
      "no-shadow": [1, { "allow": ["req", "res", "err"] }],
      "no-undef": 0,
      "no-unused-vars": 0,
      "no-eval": 0,
      "valid-jsdoc": [1, {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": false,
        "requireReturnDescription": true
      }],
      "require-jsdoc": [1, {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true
        }
      }]
    }
  }